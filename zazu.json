{
  "name": "zazu-timer",
  "version": "1.0.0",
  "description": "Create timers that keep you focused!",
  "blocks": {
    "input": [
      {
        "id": "timer-helper",
        "type": "Keyword",
        "keyword": "timer",
        "title": "Create a timer!",
        "subtitle": "Example: 'timer 5:00' or 'timer 15 tomato'",
        "icon": "fa-clock-o"
      },
      {
        "id": "start-timer",
        "type": "PrefixScript",
        "prefix": "timer",
        "space": true,
        "args": "Required",
        "script": "src/timerInput.js",
        "connections": ["NotifyStart", "CreateTimer"]
      },
      {
        "id": "list-timers",
        "type": "PrefixScript",
        "prefix": "ltimer",
        "space": true,
        "args": "Optional",
        "script": "src/listTimers.js"
      },
      {
        "id": "delete-timers",
        "type": "PrefixScript",
        "prefix": "dtimer",
        "space": true,
        "args": "Optional",
        "script": "src/listTimers.js",
        "connections": ["DeleteTimer"]
      }
    ],
    "output": [
      {
        "id": "NotifyStart",
        "type": "SendNotification",
        "title": "Timer Starter",
        "message": "{value}"
      },
      {
        "id": "CreateTimer",
        "type": "UserScript",
        "script": "src/startTimer.js",
        "connections": ["NotifyEnd"]
      },
      {
        "id": "DeleteTimer",
        "type": "UserScript",
        "script": "src/deleteTimer.js",
        "connections": ["NotifyEnd"]
      },
      {
        "id": "NotifyEnd",
        "type": "SendNotification",
        "title": "Timer Ended",
        "message": "{value}"
      }
    ]
  }
}
